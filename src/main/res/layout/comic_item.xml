<?xml version="1.0" encoding="utf-8"?>
<!-- This XML is used on home page and filter/search page to display comics the users can view -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="250dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Each comic will have an image followed by comic name -->
            <ImageView
                android:id="@+id/image_comic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/comic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#80F44A3F"
                android:padding="6dp"
                android:text="COMIC"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </FrameLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>